            .nav-link .icon {
                margin-right: 20px;
                font-size: 16px;
                width: 20px;
                text-align: center;
            }

            .nav-link .chevron {
                margin-left: auto;
                transition: transform 0.3s ease;
            }

            .nav-link.expanded .chevron {
                transform: rotate(180deg);
            }

        .submenu {
            background-color: rgba(0, 0, 0, 0.2);
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

            .submenu.show {
                max-height: 200px;
            }

            .submenu .nav-link {
                padding-left: 60px;
                font-size: 13px;
            }

        .sidebar-footer {
            padding: 20px 25px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        .sign-out {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            font-size: 14px;
            padding: 10px 0;
        }

            .sign-out .icon {
                margin-right: 12px;
                font-size: 18px;
            }

            .sign-out:hover {
                color: rgba(255, 255, 255, 0.8);
            }

        /* Scrollbar styling */
        .nav-menu::-webkit-scrollbar {
            width: 4px;
        }

        .nav-menu::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        .nav-menu::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 4px;
        }
    .nav-link:active {
        background-color: white;
        color: #005C44;
        border-left: 4px solid #005C44;
        font-weight: 500;
        border-radius: 25px 0 0 25px;
